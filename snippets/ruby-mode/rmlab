# -*- mode: ruby; require-final-newline: nil; backup-inhibited: t -*-
#name: UILabel
# --
@${1:var} = UILabel.alloc.initWithFrame([[10, y], [view.frame.size.width-20, 30]])
@$1.font = UIFont.systemFontOfSize(20)
@$1.text = "${2:text}"
@$1.textColor = UIColor.darkGrayColor
@$1.backgroundColor = UIColor.clearColor
view.addSubview(@$1)
y += @$1.frame.size.height